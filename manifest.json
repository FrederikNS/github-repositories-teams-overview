{
  "manifest_version": 2,

  "name": "Github Repository Teams Overview",
  "description": "This extensions adds the list of teams to lists of repositories in your organization.",
  "version": "0.2",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*",
        "http://www.github.com/*",
        "https://www.github.com/*"],
      "js": ["lodash.min.js", "qwest.min.js", "content.js"]
    }
  ],
  "permissions": [
    "https://api.github.com/*",
    "storage"
  ],
  "icons": {
    "16": "16.png",
    "24": "24.png",
    "32": "32.png",
    "64": "64.png",
    "128": "128.png",
    "256": "256.png",
    "512": "512.png"
  },
  "applications": {
    "gecko": {
      "id": "github.repository.teams.overview@example.com"
    }
  }
}
